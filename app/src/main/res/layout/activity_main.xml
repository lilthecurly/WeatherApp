<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dayback"
    tools:context=".MainActivity"
    tools:ignore="ExtraText">
    <TextView
        android:id="@+id/alert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/oswald_extralight"
        android:textColor="@color/black"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.429" />
    <TextView
        android:id="@+id/city"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/oswald_extralight"
        android:textColor="@color/peach"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/temperature" />
    <TextView
        android:id="@+id/temperature"
        android:layout_width="205dp"
        android:layout_height="172dp"
        android:fontFamily="@font/oswald_extralight"
        android:textAlignment="textStart"
        android:textColor="@color/design_default_color_background"
        android:textSize="120sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/celsius"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/oswald_extralight"
        android:textColor="@color/peach"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/temperature"
        app:layout_constraintEnd_toEndOf="@+id/temperature"
        app:layout_constraintHorizontal_bias="0.59"
        app:layout_constraintStart_toStartOf="@+id/temperature"
        app:layout_constraintTop_toTopOf="@+id/temperature"
        app:layout_constraintVertical_bias="0.342" />
    <TextView
        android:id="@+id/weather"
        android:layout_width="156dp"
        android:layout_height="54dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/oswald_extralight"
        android:textAlignment="center"
        android:textColor="@color/peach"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/temperature"
        app:layout_constraintTop_toTopOf="parent" />
    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="410dp"
        android:layout_height="160dp"
        android:layout_marginBottom="64dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <androidx.gridlayout.widget.GridLayout
            android:layout_width="205dp"
            android:layout_height="80dp"
            app:layout_column="0"
            app:layout_row="1">
            <TextView
                android:id="@+id/pressure1"
                android:layout_width="205dp"
                android:layout_height="30dp"
                android:fontFamily="@font/oswald"
                android:textAlignment="center"
                android:textColor="@color/peach"
                android:textSize="16sp"
                app:layout_column="0"
                app:layout_row="0" />
            <TextView
                android:id="@+id/pressure"
                android:layout_width="205dp"
                android:layout_height="50dp"
                android:fontFamily="@font/oswald"
                android:textAlignment="center"
                android:textColor="@color/peach"
                android:textSize="16sp"
                app:layout_column="0"
                app:layout_row="1" />
        </androidx.gridlayout.widget.GridLayout>
        <androidx.gridlayout.widget.GridLayout
            android:layout_width="205dp"
            android:layout_height="80dp"
            app:layout_column="1"
            app:layout_row="1">
            <TextView
                android:id="@+id/wind1"
                android:layout_width="205dp"
                android:layout_height="30dp"
                android:fontFamily="@font/oswald"
                android:textAlignment="center"
                android:textColor="@color/peach"
                android:textSize="16sp"
                app:layout_column="0"
                app:layout_row="0" />
            <TextView
                android:id="@+id/wind"
                android:layout_width="205dp"
                android:layout_height="50dp"
                android:fontFamily="@font/oswald"
                android:textAlignment="center"
                android:textColor="@color/peach"
                android:textSize="16sp"
                app:layout_column="0"
                app:layout_row="1" />
        </androidx.gridlayout.widget.GridLayout>
        <androidx.gridlayout.widget.GridLayout
            android:layout_width="205dp"
            android:layout_height="80dp"
            app:layout_column="0"
            app:layout_row="2">
            <TextView
                android:id="@+id/pop1"
                android:layout_width="205dp"
                android:layout_height="30dp"
                android:fontFamily="@font/oswald"
                android:textAlignment="center"
                android:textColor="@color/peach"
                android:textSize="16sp"
                app:layout_column="0"
                app:layout_row="0" />
            <TextView
                android:id="@+id/pop"
                android:layout_width="205dp"
                android:layout_height="50dp"
                android:fontFamily="@font/oswald"
                android:textAlignment="center"
                android:textColor="@color/peach"
                android:textSize="16sp"
                app:layout_column="0"
                app:layout_row="1" />
        </androidx.gridlayout.widget.GridLayout>
        <androidx.gridlayout.widget.GridLayout
            android:layout_width="205dp"
            android:layout_height="80dp"
            app:layout_column="1"
            app:layout_row="2">
            <TextView
                android:id="@+id/cloudiness1"
                android:layout_width="205dp"
                android:layout_height="30dp"
                android:fontFamily="@font/oswald"
                android:textAlignment="center"
                android:textColor="@color/peach"
                android:textSize="16sp"
                app:layout_column="0"
                app:layout_row="0" />
            <TextView
                android:id="@+id/cloudiness"
                android:layout_width="205dp"
                android:layout_height="50dp"
                android:fontFamily="@font/oswald"
                android:textAlignment="center"
                android:textColor="@color/peach"
                android:textSize="16sp"
                app:layout_column="0"
                app:layout_row="1" />
        </androidx.gridlayout.widget.GridLayout>
    </androidx.gridlayout.widget.GridLayout>
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:contentDescription="TODO"
        app:layout_constraintBottom_toTopOf="@+id/horizontalScrollView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/temperature"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ImageContrastCheck" />
    <TextView
        android:id="@+id/feels_like"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/oswald"
        android:textAlignment="textStart"
        android:textColor="@color/peach"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/humidity"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/humidity"
        android:layout_width="0dp"
        android:layout_height="39dp"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/oswald"
        android:textAlignment="textStart"
        android:textColor="@color/peach"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/horizontalScrollView"
        app:layout_constraintStart_toStartOf="parent" />
    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/alert"
        tools:ignore="MissingConstraints">
        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/scroll1.1"
                android:layout_width="82dp"
                android:layout_height="40dp"
                android:fontFamily="@font/oswald_extralight"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/scroll1.2"
                android:layout_width="82dp"
                android:layout_height="40dp"
                android:fontFamily="@font/oswald_extralight"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/scroll1.3"
                android:layout_width="82dp"
                android:layout_height="40dp"
                android:fontFamily="@font/oswald_extralight"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/scroll1.4"
                android:layout_width="82dp"
                android:layout_height="40dp"
                android:layout_row="0"
                android:layout_column="3"
                android:fontFamily="@font/oswald_extralight"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/scroll1.5"
                android:layout_width="82dp"
                android:layout_height="40dp"
                android:layout_row="0"
                android:layout_column="4"
                android:fontFamily="@font/oswald_extralight"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/scroll1.6"
                android:layout_width="82dp"
                android:layout_height="40dp"
                android:layout_row="0"
                android:layout_column="5"
                android:fontFamily="@font/oswald_extralight"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/scroll1.7"
                android:layout_width="82dp"
                android:layout_height="40dp"
                android:layout_row="0"
                android:layout_column="6"
                android:fontFamily="@font/oswald_extralight"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/scroll1.8"
                android:layout_width="82dp"
                android:layout_height="40dp"
                android:layout_row="0"
                android:layout_column="7"
                android:fontFamily="@font/oswald_extralight"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="16sp" />
            <ImageView
                android:id="@+id/scroll2.1"
                android:layout_width="82dp"
                android:layout_height="40dp"
                android:layout_row="1"
                android:layout_column="0" />
            <ImageView
                android:id="@+id/scroll2.2"
                android:layout_width="82dp"
                android:layout_height="40dp"
                android:layout_row="1"
                android:layout_column="1" />
            <ImageView
                android:id="@+id/scroll2.3"
                android:layout_width="82dp"
                android:layout_height="40dp"
                android:layout_row="1"
                android:layout_column="2" />
            <ImageView
                android:id="@+id/scroll2.4"
                android:layout_width="82dp"
                android:layout_height="40dp"
                android:layout_row="1"
                android:layout_column="3" />
            <ImageView
                android:id="@+id/scroll2.5"
                android:layout_width="82dp"
                android:layout_height="40dp"
                android:layout_row="1"
                android:layout_column="4" />
            <ImageView
                android:id="@+id/scroll2.6"
                android:layout_width="82dp"
                android:layout_height="40dp"
                android:layout_row="1"
                android:layout_column="5" />
            <ImageView
                android:id="@+id/scroll2.7"
                android:layout_width="82dp"
                android:layout_height="40dp"
                android:layout_row="1"
                android:layout_column="6" />
            <ImageView
                android:id="@+id/scroll2.8"
                android:layout_width="82dp"
                android:layout_height="40dp"
                android:layout_row="1"
                android:layout_column="7" />
            <TextView
                android:id="@+id/scroll3.1"
                android:layout_width="82dp"
                android:layout_height="40dp"
                android:layout_row="2"
                android:layout_column="0"
                android:textAlignment="center"
                android:textColor="@color/black" />
            <TextView
                android:id="@+id/scroll3.2"
                android:layout_width="82dp"
                android:layout_height="40dp"
                android:layout_row="2"
                android:layout_column="1"
                android:textAlignment="center"
                android:textColor="@color/black" />
            <TextView
                android:id="@+id/scroll3.3"
                android:layout_width="82dp"
                android:layout_height="40dp"
                android:layout_row="2"
                android:layout_column="2"
                android:textAlignment="center"
                android:textColor="@color/black" />
            <TextView
                android:id="@+id/scroll3.4"
                android:layout_width="82dp"
                android:layout_height="40dp"
                android:layout_row="2"
                android:layout_column="3"
                android:textAlignment="center"
                android:textColor="@color/black" />
            <TextView
                android:id="@+id/scroll3.5"
                android:layout_width="82dp"
                android:layout_height="40dp"
                android:layout_row="2"
                android:layout_column="4"
                android:textAlignment="center"
                android:textColor="@color/black" />
            <TextView
                android:id="@+id/scroll3.6"
                android:layout_width="82dp"
                android:layout_height="40dp"
                android:layout_row="2"
                android:layout_column="5"
                android:textAlignment="center"
                android:textColor="@color/black" />
            <TextView
                android:id="@+id/scroll3.7"
                android:layout_width="82dp"
                android:layout_height="40dp"
                android:layout_row="2"
                android:layout_column="6"
                android:textAlignment="center"
                android:textColor="@color/black" />
            <TextView
                android:id="@+id/scroll3.8"
                android:layout_width="82dp"
                android:layout_height="40dp"
                android:layout_row="2"
                android:layout_column="7"
                android:textAlignment="center"
                android:textColor="@color/black" />
        </GridLayout>
    </HorizontalScrollView>
    <TextView
        android:id="@+id/daytime"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/oswald_extralight"
        android:textColor="@color/peach"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/city" />
</androidx.constraintlayout.widget.ConstraintLayout>